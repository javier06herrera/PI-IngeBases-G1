@{
    Proyecto.Models.ArticleModel article = ViewData["Article"] as Proyecto.Models.ArticleModel;
}
@model Proyecto.Models.IsNominatedModel

@using (Html.BeginForm())
{
    <!DOCTYPE html>

    <html>
    <body>
        <div class="grid-container1">
            <div class="AnswerForm">
                <div class="form-group">
                    @Html.LabelFor(model => model.answer, htmlAttributes: new { @class = "  control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.answer, new SelectList(Model.optionList, "Value", "Text"), "--Please select an answer--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group ">
                    @Html.LabelFor(model => model.comments, htmlAttributes: new { @class = "  control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.comments, new { @class = "form-control .myTextArea" })
                        @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="SendButton">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
            <div class="ArticleInfo">
                <div class="card card-default">
                    <div class="article-info">
                        <div class="article-info"><i class="fa fa-book"></i>@Html.DisplayFor(modelItem => article.name)</div>
                        <div class="art-category"><i class="fa fa-bars"></i>@Html.DisplayFor(modelItem => article.topicName)</div>
                    </div>

                    <div class="article-content">
                        <p class="block-with-text">
                            @Html.DisplayFor(modelItem => article.Abstract)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
}
