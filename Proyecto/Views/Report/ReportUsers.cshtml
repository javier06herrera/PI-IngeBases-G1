    <script src="~/Scripts/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script src="~/Scripts/js/CommunityProgressReport.js" type="text/javascript"></script>
</head>

<body>

        <div class="form-horizontal">
            <div class="container">
                <div class="card bg-light">
                    <article class="card-body mx-auto" style="max-width: 300px;">
                        <h4 class="card-title mt-3 text-center">Generate Report</h4>
                        <p class="text-center">Get to know the community members info!</p>

                        <label>Categories</label>
                        <select id="categories" multiple="multiple">
                            <option value="Country">Country</option>
                            <option value="Skills">Skills</option>
                            <option value="Languages">Languages</option>
                            <option value="Hobbies">Hobbies</option>
                        </select>

                        <button onclick="initReportUser()" class="btn btn-primary">Generate</button>
                    </article>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function () {
                $('select').multiselect(
                    {
                        includeSelectAllOption: true,
                        numberDisplayed: 5,
                        buttonWidth: '230px'
                    });
            });
        </script>

        <div class="container" id="canvasContainer">
            <div class="row my-2" id="row">
            </div>
        </div>
</body>

</html>









