@model IEnumerable<Proyecto.Models.ArticleModel>

<div class="container featured-area-default padding-30">
    <div class="row">
        <div class="col-md-8 padding-20">
            <div class="row">
                <div class="fb-heading">
                    All Articles
                </div>
                <hr class="style-three">
                @foreach (var item in Model)
                {
                    <div class="card card-default">
                        <div class="article-heading-abb">
                            <a href="single-article.html"><i class="fa fa-pencil-square-o"></i>@Html.DisplayFor(modelItem => item.name)</a>
                        </div>
                        <div class="article-info">
                            <div class="art-date"><i class="fa fa-calendar-o"></i>@Html.DisplayFor(modelItem => item.publishDate)</div>
                            <div class="art-category"><i class="fa fa-folder"></i>@Html.DisplayFor(modelItem => item.topicName)</div>
                            <div class="art-comments"><i class="fa fa-thumbs-o-up"></i>@Html.DisplayFor(modelItem => item.likesCount)</div>
                            <div class="art-comments"><i class="fa fa-thumbs-o-down"></i>@Html.DisplayFor(modelItem => item.dislikesCount)</div>
                        </div>

                        <div class="article-content">
                            <p class="block-with-text">
                                @Html.DisplayFor(modelItem => item.Abstract)
                            </p>
                        </div>

                        <div class="article-read-more">
                            @Html.ActionLink("Read more...", "PreviewArticle", "Article", new { articleId = item.articleId }, null)
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>






























