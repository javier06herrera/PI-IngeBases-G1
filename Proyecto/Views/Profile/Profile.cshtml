@model  Proyecto.Models.ProfileModel

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- meta -->
                <div class="card bg-light mb-3">
                    <div class="row">
                        <div class="col-sm-6">
                            <span class="float-left mr-3"><img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="thumb-lg rounded-circle"></span>
                            <div>
                                <h4 class="mt-1 mb-1 font-18">@Html.DisplayFor(model => model.name) @Html.DisplayFor(model => model.lastName)</h4>
                                <p>@Html.DisplayFor(model => model.job)</p>
                                <p>@Html.DisplayFor(model => model.addressCity), @Html.DisplayFor(model => model.addressCountry)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4">
                <div class="card-box">
                    <h4 class="header-title mt-0">Personal Information</h4>
                    <div class="panel-body">
                        <p class="text-muted font-13">Hye, I’m Johnathan Doe residing in this beautiful world. I create websites and mobile apps with great UX and UI design. I have done work with big companies like Nokia, Google and Yahoo. Meet me or Contact me for any queries. One Extra line for filling space. Fill as many you want.</p>
                        <hr>
                        <div class="text-left">
                            <p class="text-muted font-13"><strong>Full Name :</strong> <span class="m-l-15">@Html.DisplayFor(model => model.name) @Html.DisplayFor(model => model.lastName)</span></p>
                            <p class="text-muted font-13"><strong>Mobile :</strong><span class="m-l-15">@Html.DisplayFor(model => model.mobile)</span></p>
                            <p class="text-muted font-13"><strong>Email :</strong> <span class="m-l-15">@Html.DisplayFor(model => model.email)</span></p>
                            <p class="text-muted font-13"><strong>Location :</strong> <span class="m-l-15">@Html.DisplayFor(model => model.addressCountry)</span></p>
                            <p class="text-muted font-13">
                                <strong>Languages :</strong> <span class="m-l-5"><span class="flag-icon flag-icon-us m-r-5 m-t-0" title="us"></span>@Html.DisplayFor(model => model.languages)</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card text-white bg-dark mb-3">
                            <i class="icon-layers float-right text-muted"></i>
                            <h6 class="text-muted text-uppercase text-light mt-0">Member rank</h6>
                            <h2 class="" data-plugin="counterup">@Html.DisplayFor(model => model.typeOfMember)</h2>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card text-white bg-dark mb-3">
                            <i class="icon-paypal float-right text-muted"></i>
                            <h6 class="text-muted text-uppercase text-light mt-0">Number of articles</h6>
                            <h2 class=""><span data-plugin="counterup">12</span></h2>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card text-white bg-dark mb-3">
                            <i class="icon-paypal float-right text-light text-muted"></i>
                            <h6 class="text-muted text-uppercase mt-0">Points</h6>
                            <h2 class=""><span data-plugin="counterup">@Html.DisplayFor(model => model.totalQualification)</span>
                        </div>
                    </div>

                    



                </div>

        </div>

    </div>
</div>