@model Proyecto.Models.CommunityProgressReportModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap-multiselect.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/js/Chart.js" type="text/javascript"></script>
    <script src="~/Scripts/js/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script src="~/Scripts/js/CommunityProgressReport.js" type="text/javascript"></script>
    <script  type="text/javascript" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/randomColor.js"></script>
</head>

<body>
    <div class="form-horizontal">
        <div class="container">
            <div class="card bg-light">
                <article class="card-body mx-auto" style="max-width: 300px;">
                    <h4 class="card-title mt-3 text-center">Generate Report</h4>
                    <p class="text-center">Get to know the community progress stats!</p>
                    <label>Filters</label>
                    <select id="filters" multiple="multiple">
                        <option value="Number of articles">Number of articles</option>
                        <option value="Article score">Article score</option>
                        <option value="Number of articles peer category and topic">Number of articles per category and topic</option>
                        <option value="Access Count peer category and topic">Access Count per category and topic</option>
                    </select>

                    <button onclick="initReport()" class="btn btn-primary">Generate</button>
                </article>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('select').multiselect(
                {
                    includeSelectAllOption: true,
                    numberDisplayed: 5,
                    buttonWidth: '230px'
                });
        });
    </script>

    <div class="container" id="canvasContainer">
        <div class="row my-2" id="row">
        </div>
    </div>

</body>

</html>