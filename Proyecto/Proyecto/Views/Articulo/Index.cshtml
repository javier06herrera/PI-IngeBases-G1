@model IEnumerable<Proyecto.Models.ArticuloModel>

<p>
    @Html.ActionLink("Create short article", "Create")
</p>
<p>
    @Html.ActionLink("Upload long article", "Upload")
</p>
<p>
    @Html.ActionLink("Go to FAQ", "ShowFAQ")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.topic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abstract)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publishDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publishDate)
            </td>
            @if (item.type == false)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { articleId = item.articleId })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Edit", "EditLong", new { articleId = item.articleId })
                </td>
            }


        </tr>
    }

</table>
<p> @Html.ActionLink("Buscar por topico", "SearchTopic") </p>
